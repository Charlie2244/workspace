<!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
<NavigationBar height="180rpx"></NavigationBar>
<view class="user">
	<view class="avawrap">
		<view>
			<open-data type="userAvatarUrl"></open-data>
		</view>
		<view class="username">
			<open-data type="userNickName"></open-data>
		</view>
	</view>
</view>

