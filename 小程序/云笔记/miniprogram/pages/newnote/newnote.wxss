.top {
  display: flex;
  position: fixed;
  justify-content: space-between;
  padding-right: 20rpx;
  color: white;
  font-size: small;
  align-items: center;
  padding-left: 20rpx;
  top: 170rpx;
  width: 100vw;
  background-color: #D370FA;
  height: 50rpx;
  z-index: 8;
}
.picker {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 130rpx;
  margin-right: 10rpx;
}
.picker .c{
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  border-radius: 50%;
  margin-right: 5rpx;
}
