@import "./assets/weui.wxss";
@import "./assets/iconfont.wxss";

.top {
  display: flex;
  justify-content: space-between;
  margin-right: 20rpx;
  color: #707070;
  font-size: small;
  align-items: center;
  margin-left: 20rpx;
}
.picker {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 130rpx;
}
.picker .c{
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  border-radius: 50%;
  margin-right: 5rpx;
}
.container {
  position: absolute; 
  top: 50rpx; 
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.save {
  position: fixed;
  bottom: 80rpx;
  right: 50rpx;
  /* background-color: rgb(187, 187, 214); */
  width: 120rpx;
  /* text-align: center;
  vertical-align: middle; */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  height: 60rpx;
  font-size: small;
  color: #22C704;
  font-weight: 800;
  box-shadow: -3rpx 3rpx 10rpx 5rpx #ccc;
}

