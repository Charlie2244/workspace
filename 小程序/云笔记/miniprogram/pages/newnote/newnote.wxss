.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  padding: 10px 10px 20px 10px;
  /* margin-bottom: 60rpx; */
  overflow-y: scroll;
  display: flex;
  flex: 1;
  flex-direction: column;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border: 1px solid #ECECEC; */
  border-left: none;
  border-right: none;
  background-color: #D370FA;
}

.save {
  position: fixed;
  bottom: 120rpx;
  right: 50rpx;
  /* background-color: rgb(187, 187, 214); */
  width: 120rpx;
  /* text-align: center;
  vertical-align: middle; */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  height: 60rpx;
  font-size: small;
  color: white;
  background-color: #D370FA;
  font-weight: 550;
  box-shadow: -3rpx 3rpx 10rpx 5rpx #ccc;
}

